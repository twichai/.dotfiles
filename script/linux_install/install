#!/bin/bash

set -e

echo "Updating apt cache..."
sudo apt update

echo "Installing required packages..."
sudo apt install -y zsh tmux sway curl git

echo "Creating ~/.local/share/nvim directory..."
mkdir -p ~/.local/share/nvim

echo "Creating temporary directory for extraction..."
TMP_DIR=$(mktemp -d)
cd "$TMP_DIR"

echo "Downloading Neovim AppImage..."
curl -L -o nvim.appimage https://github.com/neovim/neovim/releases/latest/download/nvim-linux-x86_64.appimage
chmod +x nvim.appimage

echo "Extracting Neovim AppImage..."
./nvim.appimage --appimage-extract

echo "Installing Neovim to ~/.local/share/nvim..."
cp squashfs-root/usr/bin/nvim ~/.local/share/nvim/
chmod +x ~/.local/share/nvim/nvim

echo "Cleaning up..."
cd ~
rm -rf "$TMP_DIR"

echo "Add this to your shell config (e.g., ~/.bashrc or ~/.zshrc):"
echo 'export PATH="$HOME/.local/share/nvim:$PATH"'
