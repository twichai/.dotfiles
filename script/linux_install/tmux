#!/bin/bash

# Exit if any command fails
set -e

# Ask for sudo once
echo "ğŸ” Requesting sudo access..."
sudo -v

# Keep sudo alive
( while true; do sudo -n true; sleep 60; done ) &
SUDO_PID=$!
trap 'kill $SUDO_PID' EXIT

echo "ğŸ”§ Updating package list..."
sudo apt update

echo "ğŸ“¦ Installing tmux..."
sudo apt install -y tmux

